<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment"
    android:name="de.iweinzierl.easyprofiles.fragments.ProfileListFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout="@layout/fragment_profile_list">

    <Toolbar
        android:id="@+id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/ColorPrimary"
        android:elevation="4dp" />

    <FrameLayout
        android:id="@+id/wifi_list_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/notification_bar"
        android:layout_below="@id/toolbar_top" />

    <TextView
        android:id="@+id/notification_bar"
        style="@style/AppTheme.NotificationBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-48dp"
        android:gravity="center_vertical" />

</RelativeLayout>
