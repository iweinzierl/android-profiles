<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.EditProfile">
    </style>

    <style name="AppTheme.EditProfile.Button">
        <item name="android:drawable">@android:color/transparent</item>
    </style>

    <style name="AppTheme.EditProfile.Button.Cancel">
    </style>

    <style name="AppTheme.EditProfile.Button.Ok">
    </style>

    <style name="AppTheme.SettingsView">
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="AppTheme.SettingsView.Dialog">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="AppTheme.SettingsView.Label">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/SettingsViewLabel</item>
    </style>

    <style name="AppTheme.SettingsView.Value">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/SettingsViewLabel</item>
    </style>

    <style name="AppTheme.EditTextDialog" parent="AlertDialog.AppCompat">
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppTheme.EditTextDialog.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/EditTextDialogTitle</item>
    </style>

    <style name="AppTheme.EditTextDialog.Label">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/EditTextDialogLabel</item>
    </style>

    <style name="AppTheme.EditTextDialog.Value">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/EditTextDialogValue</item>
    </style>

    <style name="AppTheme.EditTextDialog.OkButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/EditTextDialogOk</item>
    </style>

    <style name="AppTheme.EditTextDialog.CancelButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/EditTextDialogCancel</item>
    </style>

</resources>
