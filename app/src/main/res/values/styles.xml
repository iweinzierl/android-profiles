<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="colorButtonNormal">@color/ColorPrimary</item>
        <item name="android:colorAccent">@color/ColorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ActionBar"></style>

    <style name="AppTheme.ActionBar.Button">
        <item name="android:background">@drawable/primary_round</item>
    </style>

    <style name="AppTheme.NotificationBar">
        <item name="android:textColor">@color/ColorBright</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:background">@color/ColorSecondary</item>
    </style>

    <style name="AppTheme.Navigation">
        <item name="android:background">@color/ColorBright</item>
    </style>

    <style name="AppTheme.Navigation.Header">
        <item name="android:background">@color/ColorSecondary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="AppTheme.Navigation.Header.Text">
        <item name="android:background">@color/ColorPrimary</item>
        <item name="android:textColor">@color/ColorBright</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:paddingLeft">96dp</item>
    </style>

    <style name="AppTheme.Navigation.Header.Logo">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
    </style>

    <style name="AppTheme.Navigation.Header.Border">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:background">@color/ColorSecondaryDark</item>
    </style>

    <style name="AppTheme.Navigation.Item">
        <item name="android:background">@drawable/click_effect</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="AppTheme.Navigation.Item.Icon">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="AppTheme.Navigation.Item.Text">
        <item name="android:paddingLeft">72dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/ColorSecondaryDark</item>
    </style>

    <style name="AppTheme.List"></style>

    <style name="AppTheme.List.Hint">
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="AppTheme.List.Hint.Title">
        <item name="android:textColor">@color/ColorSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_centerInParent">false</item>
    </style>

    <style name="AppTheme.List.Hint.Text">
        <item name="android:textColor">@color/ColorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_centerInParent">false</item>
    </style>

    <style name="AppTheme.List.Item">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="AppTheme.List.Item.Text">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="AppTheme.List.Item.PrimaryIcon">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="AppTheme.List.Item.SecondaryIcon">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.List.SwipeDelete">
        <item name="android:background">@color/ColorSecondary</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="AppTheme.List.SwipeDelete.InfoText">
        <item name="android:textColor">@color/ColorBright</item>
    </style>

    <style name="AppTheme.List.SwipeDelete.UndoText">
        <item name="android:textColor">@color/ColorPrimary</item>
    </style>

    <style name="AppTheme.Spinner">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="AppTheme.Spinner.Item">
        <item name="android:background">@drawable/click_effect</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="AppTheme.Spinner.Item.Text">
        <item name="android:clickable">false</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="AppTheme.EditProfile"></style>

    <style name="AppTheme.EditProfile.Devider">
        <item name="android:background">@color/EditProfileDevider</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="AppTheme.EditProfile.SectionHeader">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/EditProfileSectionHeader</item>
    </style>

    <!-- SettingsView -->
    <style name="AppTheme.SettingsView">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="AppTheme.SettingsView.Container">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="AppTheme.SettingsView.Dialog">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="AppTheme.SettingsView.Label">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/SettingsViewLabel</item>
    </style>

    <style name="AppTheme.SettingsView.Value">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/SettingsViewValue</item>
    </style>

    <!-- SettingsDialog -->
    <style name="AppTheme.SettingsDialog" parent="AlertDialog.AppCompat">
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppTheme.SettingsDialog.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/SettingsDialogTitle</item>
    </style>

    <style name="AppTheme.SettingsDialog.Label">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/SettingsDialogLabel</item>
    </style>

    <style name="AppTheme.SettingsDialog.OkButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/SettingsDialogOk</item>
    </style>

    <style name="AppTheme.SettingsDialog.CancelButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/SettingsDialogCancel</item>
    </style>

    <!-- Specific to EditTextDialog -->
    <style name="AppTheme.TextSettingsDialog.Value" parent="AppTheme.SettingsDialog">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/EditTextDialogValue</item>
    </style>

    <!-- Specific to SlideSettingsDialog -->
    <style name="AppTheme.SlideSettingsDialog.Value" parent="AppTheme.SettingsDialog">
        <!-- TODO -->
    </style>

    <!-- Specific to CheckboxSettingsDialog -->
    <style name="AppTheme.CheckboxSettingsDialog.Value" parent="AppTheme.SettingsDialog">
        <!-- TODO -->
    </style>

    <!-- Specific to SingleOptionsSettingsDialog -->
    <style name="AppTheme.SingleOptionsSettingsDialog.Value" parent="AppTheme.SettingsDialog">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
